doctype html
html
  head
    title = full_title(yield(:title))
    = content_tag(:meta, nil, name: 'description', content: yield(:description))
    = content_tag(:meta, nil, name: 'viewport', content: 'width=device-width, initial-scale=1')
    = content_tag(:meta, nil, name: 'geo.country', content: 'ru')
    = content_tag(:meta, nil, name: 'geo.placename', content: 'Ulyanovsk')
    
    = favicon_link_tag 'favicon.ico'
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags

    = render 'layouts/web/shim'
    = render 'layouts/web/google'
    = render 'layouts/web/yandex'
  body
    = render 'layouts/web/preloader'
    #wrap
      = render 'layouts/web/shop/header'
      = render 'layouts/web/shop/navigation'
      #flash
        = render 'shared/flash_messages'
      #bread
        = is_root?()
      = yield

      = render 'layouts/web/shop/footer'
      = render 'layouts/web/shop/upper'
      = render 'layouts/web/shop/slidebar'
      = render 'web/shop/registrations/registration_modal'
      = render 'web/shop/sessions/login_modal'


